<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.android.timeismoneygithub.MainActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#691a99"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/intressen"
                android:text="Total time saved:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:paddingBottom="60dp"
                android:layout_marginTop="30dp"
                android:paddingLeft="45dp"
                android:textColor="#ffffff"/>




        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <TextView

                    android:text="Styrketräning"
                    android:id="@+id/styrketraning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:paddingTop="50dp"
                    android:textColor="#68efad"
                    android:background="#F5F5F5"

                    />

                <TextView

                    android:text="Teknik"
                    android:id="@+id/teknik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:textColor="#68efad"
                    />


                <TextView

                    android:text="Datorer"
                    android:id="@+id/datorer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:textColor="#68efad"
                    android:background="#F5F5F5"
                    />


                <TextView

                    android:text="Familjen"
                    android:id="@+id/familjen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    />


                <TextView

                    android:text="Drönare"
                    android:id="@+id/dronare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:background="#F5F5F5"
                    />

            </LinearLayout>
        </ScrollView>



    </LinearLayout>

