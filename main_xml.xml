<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.android.timeismoneygithub.MainActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#691a99"
            >

            <TextView
                android:id="@+id/intressen"
                android:text="Total time saved:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:paddingBottom="60dp"
                android:paddingTop="6dp"
                android:layout_marginTop="0dp"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                />




        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <TextView

                    android:text="Get a coffee machine with timer."
                    android:id="@+id/coffee_machine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:paddingTop="6dp"
                    android:background="#F5F5F5"

                    />

                <TextView

                    android:text="Do your training at home."
                    android:id="@+id/training"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:paddingTop="6dp"

                    />


                <TextView

                    android:text="Buy a cheap preheating systerm for your car"
                    android:id="@+id/preheat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:paddingTop="6dp"
                    android:background="#F5F5F5"
                    />


                <TextView

                    android:text="Eat leftovers from yesterdays dinner"
                    android:id="@+id/leftovers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:paddingTop="6dp"
                    />


                <TextView

                    android:text="Brush your teeth in the shower"
                    android:id="@+id/brush_teeth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:background="#F5F5F5"
                    android:paddingTop="6dp"
                    />


                <TextView

                    android:text="make phonecalls in your car"
                    android:id="@+id/car_phonecalls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:paddingTop="6dp"

                    />


                <TextView

                    android:text="Get a robot vacuum cleaner"
                    android:id="@+id/vacuum_cleaner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:background="#F5F5F5"
                    android:paddingTop="6dp"
                    />


            </LinearLayout>
        </ScrollView>



    </LinearLayout>


