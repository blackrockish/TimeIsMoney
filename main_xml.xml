<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.timeismoneygithub.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#691a99">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:onClick="openbrowser"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:src="@drawable/grimetonsistavit"
            android:tag="https://github.com/grimetonindustries" />


        <TextView
            android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="40dp"
            android:paddingLeft="15dp"
            android:text="Total daily time saved :"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/total_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/total_time"
            android:layout_toRightOf="@id/total_time"
            android:paddingLeft="8dp"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="40dp" />


        <TextView
            android:id="@+id/minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/total_time"
            android:layout_toRightOf="@id/total_minutes"
            android:paddingLeft="10dp"
            android:text="minutes"
            android:textColor="#ffffff"
            android:textSize="18dp" />


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:orientation="horizontal">


                <TextView

                    android:id="@+id/coffee_machine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F5F5F5"
                    android:paddingBottom="50dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="6dp"
                    android:text="Get a coffee machine with timer"


                    />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#F5F5F5"
                    android:paddingRight="15dp"
                    android:text="2 min"
                    android:onClick="coffeecheckbox"
                    android:id="@+id/coffe_checkbox_id"

                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView

                    android:id="@+id/training"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="50dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="6dp"
                    android:text="Do your training at home"


                    />


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="15dp"
                    android:text="8 min"
                    android:onClick="trainingcheckbox"
                    android:id="@+id/training_checkbox_id"


                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:orientation="horizontal">


                <TextView

                    android:id="@+id/preheat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F5F5F5"
                    android:paddingBottom="50dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="6dp"
                    android:text="Buy a cheap preheating system for your car" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#F5F5F5"
                    android:paddingRight="15dp"
                    android:text="3 min"

                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/leftovers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="50dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="6dp"
                    android:text="Eat leftovers from yesterdays dinner" />


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="15dp"
                    android:text="5 min" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:orientation="horizontal">


                <TextView

                    android:id="@+id/brush_teeth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F5F5F5"
                    android:paddingBottom="50dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="6dp"
                    android:text="Brush your teeth in the shower" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#F5F5F5"
                    android:paddingRight="15dp"
                    android:text="2 min"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView

                    android:id="@+id/car_phonecalls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="50dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="6dp"
                    android:text="make phonecalls in your car"

                    />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="15dp"
                    android:text="4 min" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:orientation="horizontal">


                <TextView

                    android:id="@+id/vacuum_cleaner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F5F5F5"
                    android:paddingBottom="50dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="6dp"
                    android:text="Buy a robot vacuum cleaner" />


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#F5F5F5"
                    android:paddingRight="8dp"
                    android:text="12 min"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView

                    android:id="@+id/lawn_mower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="50dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="6dp"
                    android:text="Buy a robot lawn mower"

                    />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="15dp"
                    android:text="8 min" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>
